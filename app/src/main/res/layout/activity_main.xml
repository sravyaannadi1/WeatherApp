<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"

    android:background="#C5ABCD"

    tools:context=".MainActivity">


    <androidx.fragment.app.FragmentContainerView
        android:name="com.training.weather.CurrentWeatherInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currentWeather"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:name="com.training.weather.CurrentDetailedInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DetailedInfo"
        app:layout_constraintTop_toBottomOf="@id/currentWeather"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:name="com.training.weather.FragmentHourlyInfo"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:id="@+id/HourlyInfo"
        app:layout_constraintTop_toBottomOf="@id/DetailedInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>